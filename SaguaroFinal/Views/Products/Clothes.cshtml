
@{
    ViewBag.Title = "Ropa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" lang="es">
    <div class="box">
        <div class="col-lg-12">
            <h2>Ropa</h2>
<h3>Seleccione Categoria </h3>
            @using (Html.BeginForm())
            {
                @Html.DropDownList("CategoryId", (SelectList)ViewBag.categoriesList, new { onchange = "submit();"})
            }

            @foreach (var category in ViewBag.categories)
            {
                <h1>@category.Name</h1>
                <div class="row">
                    @foreach (var product in category.Products)
                    {
                        <div class="col-md-3 text-center">
                            <div>
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })">
                                    <img src="@Url.Content("~/Images/" + @Path.GetFileName(product.Image)) " width="300" />
                                </a>
                                <h2>@product.Name</h2>
                                <h3>$ @product.Price</h3>
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-primary" role="button">Ver más</a>
                            </div>
                        </div>
                    }
                </div>
                }

        </div>
    </div>
</div>
